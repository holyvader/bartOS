{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@public/*": ["public/*"],
			"@user-home/*": ["src/app/user-home/*"],
			"@system-programs/*": ["src/app/modules/system-programs/*"],
			"@system-services/*": ["src/app/modules/system-services/*"],
			"@providers/*": ["src/app/modules/providers/*"],

			"@permission/*": ["src/app/core/permission/*"],
			"@system/*": ["src/app/core/system/*"],
			"@ui/*": ["src/app/core/ui/*"],
		}
	},
  "include": ["src"],
	"typeRoots": ["./src/definitions"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
