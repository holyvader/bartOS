{
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					["@public", "../../../public"],
					["@user-home", "./"],
					["@programs", "../modules/programs"],
					["@services", "../modules/services"],
					["@config", "../config"],
					["@permission", "../core/permission"],
					["@system", "../core/system"],
					["@ui", "../core/ui"]
				],
				"extensions": [".ts", ".tsx", ".js", ".jsx", ".json"]
			}
		}
	},
	"rules": {
		"no-restricted-imports": ["error", {
			"patterns": [{
				"group": ["@public/*", "@programs/*", "@services/*", "@config/*",
					"@permission/*", "@system/*", "@ui/*"],
				"message": "Import of other parts of the app is restricted"
			}]
		}]
	}
}
